extends ../layout/common

block content
  h1 
    span USER LIST
    a.btn.btn-primary.ml-2(href="/users/create") New
  .d-flex
    form(action="/users/search" method='get' class ="d-flex ml-auto ")
      input(class="form-control" type="text" name="q" value=query)
      button(class="btn btn-primary") Search
  table.table
    tr
      th Name
      th Phone
      th Action

    each user in users
      tr
        td=user.name
        td=user.phone
        td 
          a.btn.btn-light(href="/users/"+user.id) View
    