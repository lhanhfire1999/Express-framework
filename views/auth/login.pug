extends ../layout/common

block content 
  h1 Login 
  
  if errors
    each error in errors
      .alert.alert-danger #{error}


  form(action="/auth/login" method="post")
    .form-group
      label(for="email") Email:
      input.form-control(type="text", name="email", id="email", value=values ? values.email : '' )
    .form-group
      label(for="password") Password:
      input.form-control(type="text", name="password", id="password", value=values ? values.password : '' )
    button.btn.btn-primary Login 
    
