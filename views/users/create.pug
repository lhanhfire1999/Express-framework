extends ../layout/common

block content 
  h1 New user create 
  
  if errors
    each error in errors
      .alert.alert-danger #{error}


  form(action="/users/create", method="post", enctype="multipart/form-data")
    .form-group
      label(for="name") Name:
      input.form-control(type="text", name="name", id="name", value=values ? values.name : '' )
    .form-group
      label(for="phone") Phone:
      input.form-control(type="text", name="phone", id="phone", value=values ? values.phone : '' )
    .form-group
      label(for="avatar") Avatar:
      input.form-control-file(type="file", name="avatar", id="avatar", )

    button.btn.btn-primary Create 
    
